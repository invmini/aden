{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  },
  "rules": {
    "semi": 2,
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "comma-dangle": ["error", "always-multiline"],
    "no-multiple-empty-lines": ["error", {"max": 2}],
    "no-trailing-spaces": "error",
    func-style: ["error", "declaration", { "allowArrowFunctions": true }]
  }
}